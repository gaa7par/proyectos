<h1>Projects</h1>

<p>
  <%= form_tag(projects_path, :method => "get") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search" %>
    <%= submit_tag "Search" %>
  <% end %>
</p>

<table>
  <tr>
    <th>Name</th>
    <th>Active</th>
  </tr>

  <% @projects.each do |project| %>
    <tr>
      <td><%= project.name %></td>
      <td><%= project.active %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New Project', new_project_path %> |
<%= link_to 'Back', root_path %>
